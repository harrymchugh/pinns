Bootstrap: docker
From: ubuntu:latest

%files
    ../../docker/Dockerfiles/repo-key /

%post
    DEBIAN_FRONTEND=noninteractive

    apt-get update
    apt-get -y install --no-install-recommends \
        apt-utils git vim-tiny nano-tiny wget ca-certificates rsync \
        passwd libnss-wrapper python3 python3-pip

    wget -q -O - https://dl.openfoam.com/add-debian-repo.sh | bash
    apt-get update
    apt-get -y install --no-install-recommends openfoam2212
    
    pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118

    rm -rf /var/lib/apt/lists/*

    chmod 600 /repo-key \  
    echo "IdentityFile /repo-key" >> /etc/ssh/ssh_config \  
    echo -e "StrictHostKeyChecking no" >> /etc/ssh/ssh_config \
    git clone git@github.com:harrymchugh/pinns.git \ 
    cd pinns \
    pip install --upgrade pip \
    pip install setuptools --upgrade \
    pip install .

%runscript
    . /usr/lib/openfoam/openfoam2212/etc/bashrc
    exec "$@"
